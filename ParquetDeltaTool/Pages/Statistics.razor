@page "/statistics"
@page "/statistics/{FileId:guid}"
@using ParquetDeltaTool.Models
@using ParquetDeltaTool.Services
@inject ApplicationState AppState
@inject IFileProcessor FileProcessor
@inject IJSRuntime JSRuntime

<PageTitle>Statistics - Parquet & Delta Lake Tool</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge">
    <MudGrid>
        <!-- Header -->
        <MudItem xs="12">
            <MudPaper Class="pa-6" Elevation="2">
                <MudStack Row AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween">
                    <MudStack>
                        <MudText Typo="Typo.h4">Data Statistics</MudText>
                        <MudText Typo="Typo.body1" Color="Color.Secondary">
                            Comprehensive data quality metrics and performance insights
                        </MudText>
                    </MudStack>
                    <MudStack Row AlignItems="AlignItems.Center" Spacing="2">
                        <MudIcon Icon="Icons.Material.Filled.BarChart" Size="Size.Large" Color="Color.Primary" />
                        <MudText Typo="Typo.h6" Color="Color.Primary">Statistics Dashboard</MudText>
                    </MudStack>
                </MudStack>
            </MudPaper>
        </MudItem>

        <!-- Coming Soon -->
        <MudItem xs="12">
            <MudPaper Class="pa-8" Elevation="1">
                <MudStack AlignItems="AlignItems.Center" Spacing="4">
                    <MudIcon Icon="Icons.Material.Filled.Construction" Size="Size.Large" Color="Color.Warning" />
                    <MudText Typo="Typo.h5" Align="Align.Center">Statistics Dashboard Coming Soon</MudText>
                    <MudText Typo="Typo.body1" Align="Align.Center" Color="Color.Secondary">
                        Advanced data quality metrics, column statistics, and performance insights will be available in the next update.
                    </MudText>
                    <MudButton StartIcon="Icons.Material.Filled.Home" 
                              Variant="Variant.Filled" 
                              Color="Color.Primary"
                              Href="/">
                        Return to Home
                    </MudButton>
                </MudStack>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>

@code {
    [Parameter] public Guid? FileId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await Task.CompletedTask;
    }
}